<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.shardcraft.token.TokensController">
    <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        <Label text="Token" GridPane.rowIndex="0">
            <padding>
                <Insets right="20.0"/>
            </padding>
        </Label>
        <ComboBox fx:id="tokenSelectionField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button onAction="#decodeSelectedToken" text="Decode" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextArea fx:id="tokenDisplay" prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
    </GridPane>
</AnchorPane>
